---
// src/components/Footer.astro

const year = new Date().getFullYear();

const footerLinks = [
  { name: "Términos y Condiciones", href: "#" },
  { name: "Política de Privacidad", href: "#" },
  { name: "Soporte", href: "mailto:soporte@jkesolutions.com" },
  { name: "Estado del Sistema", href: "#" },
];
---

<footer
  class="w-full border-t border-gray-100 dark:border-gray-800 bg-white dark:bg-background-dark py-12 px-4 sm:px-10 mt-auto transition-colors duration-200"
>
  <div
    class="max-w-[1280px] w-full mx-auto flex flex-col md:flex-row justify-between items-center md:items-start gap-8"
  >
    <div class="flex flex-col items-center md:items-start gap-3">
      <div class="flex items-center gap-3">
        <div
          class="h-8 px-2 bg-brand-dark text-white rounded flex items-center justify-center font-bold text-xs tracking-wider"
        >
          JKE
        </div>
        <span class="text-sm font-bold text-slate-700 dark:text-gray-300">
          Inventory System
        </span>
      </div>

      <span class="text-xs text-slate-500 dark:text-slate-500 font-medium">
        © {year} JKE Solutions. Todos los derechos reservados.
      </span>
    </div>

    <nav
      class="flex flex-wrap justify-center md:justify-end gap-6 md:gap-8 pt-2"
    >
      {
        footerLinks.map((link) => (
          <a
            href={link.href}
            class="text-xs font-medium text-slate-500 hover:text-brand-blue dark:text-slate-400 dark:hover:text-brand-blue transition-colors duration-200"
          >
            {link.name}
          </a>
        ))
      }
    </nav>
  </div>
</footer>
