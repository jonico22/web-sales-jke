---
// src/pages/confirm-email.astro
import MinimalLayout from "../layouts/MinimalLayout.astro";

// LEEMOS LOS DATOS DE LA URL
const email = Astro.url.searchParams.get("email") || "usuario@correo.com";
const business = Astro.url.searchParams.get("business") || "Tu Empresa";

// Preparamos el link de Gmail (opcional, ayuda al usuario)
const gmailLink = `https://mail.google.com/mail/u/0/#search/${encodeURIComponent(email)}`;
---

<MinimalLayout title="Confirmación de Correo - JKE Solutions">
  <main class="min-h-screen flex flex-col items-center justify-center p-4">
    <div
      class="w-full max-w-lg bg-white rounded-2xl shadow-xl border border-slate-100 overflow-hidden relative"
    >
      <div
        class="h-1.5 w-full bg-gradient-to-r from-confirm-primary to-sky-400"
      >
      </div>

      <div class="p-8 sm:p-12 flex flex-col items-center text-center">
        <div class="mb-10 flex items-center gap-2">
          <div
            class="w-9 h-9 rounded bg-confirm-primary flex items-center justify-center text-white font-bold text-xl shadow-sm"
          >
            J
          </div>
          <span class="text-xl font-bold text-[#343D46] tracking-tight"
            >JKE Solutions</span
          >
        </div>

        <div class="mb-8 relative">
          <div
            class="w-24 h-24 rounded-full bg-[#2D9CDB]/10 flex items-center justify-center text-confirm-primary"
          >
            <span class="material-symbols-outlined text-[52px]">mail</span>
          </div>
          <div
            class="absolute -bottom-1 -right-1 w-8 h-8 bg-white rounded-full flex items-center justify-center shadow-md border border-slate-50"
          >
            <span
              class="material-symbols-outlined text-[22px] text-confirm-primary font-bold"
              >check_circle</span
            >
          </div>
        </div>

        <h1 class="text-[#343D46] text-2xl sm:text-3xl font-bold mb-4">
          ¡Casi listo! Confirma tus datos
        </h1>

        <div
          class="w-full bg-slate-50 rounded-xl p-5 mb-8 border border-slate-100 text-left space-y-4"
        >
          <div class="flex items-center gap-4">
            <div
              class="flex items-center justify-center w-9 h-9 rounded-full bg-white text-slate-400 shadow-sm"
            >
              <span class="material-symbols-outlined text-[18px]"
                >alternate_email</span
              >
            </div>
            <div class="flex flex-col">
              <span
                class="text-[10px] font-bold text-slate-400 uppercase tracking-widest"
                >Email enviado a</span
              >
              <span class="text-sm font-semibold text-[#343D46] truncate"
                >{email}</span
              >
            </div>
          </div>

          <div class="h-px bg-slate-200 w-full"></div>

          <div class="flex items-center gap-4">
            <div
              class="flex items-center justify-center w-9 h-9 rounded-full bg-white text-slate-400 shadow-sm"
            >
              <span class="material-symbols-outlined text-[18px]"
                >storefront</span
              >
            </div>
            <div class="flex flex-col">
              <span
                class="text-[10px] font-bold text-slate-400 uppercase tracking-widest"
                >Negocio</span
              >
              <span class="text-sm font-semibold text-[#343D46] truncate"
                >{business}</span
              >
            </div>
          </div>
        </div>

        <div class="w-full space-y-5">
          <a
            href={gmailLink}
            target="_blank"
            class="w-full bg-confirm-primary hover:bg-confirm-dark text-white font-bold py-4 px-6 rounded-xl flex items-center justify-center gap-2 shadow-lg"
          >
            Ir a mi correo
            <span class="material-symbols-outlined text-[20px]"
              >open_in_new</span
            >
          </a>
        </div>
      </div>
    </div>
  </main>
</MinimalLayout>
